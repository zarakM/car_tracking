<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.zarsh.car_tracking.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/locationate"
        android:layout_toEndOf="@+id/textView5"
        app:srcCompat="@mipmap/liana" />

    <Button
        android:id="@+id/locate"
        android:theme="@style/MyButton"
        android:layout_width="85dp"
        android:textColor="#ffffff"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/locationate"
        android:layout_below="@+id/locationate"
        android:text="Locate" />

    <Button
        android:id="@+id/locationate"
        android:theme="@style/MyButton"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="40dp"
        android:text="Last Locations" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="CAR NAME"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView7"
        android:fontFamily="@font/aclonica"
        android:text="Suzuki Liana" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="OWNER" />

    <TextView
        android:id="@+id/textView5"
        android:fontFamily="@font/aclonica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignTop="@+id/textView4"
        android:text="Faizan tariq" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/berkshire_swash"
        android:text="Registraton NO."
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/textView7"
        android:fontFamily="@font/aclonica"
        android:text="ATF 608" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:fontFamily="@font/berkshire_swash"
        android:layout_marginTop="16dp"
        android:text="CITY" />

    <TextView
        android:id="@+id/textView10"
        android:fontFamily="@font/aclonica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/textView9"
        android:text="Quetta" />

    <ListView
        android:id="@+id/locationlist"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true" />


</RelativeLayout>
